<?xml version="1.0"?>
<launch>
  
  <arg name="paused" default="false" doc="Start gazebo in paused mode" />
  <arg name="gazebo" default="true"/>
  <arg name="gazebo_gui" default="true"/>
  <arg name="debug" default="false" doc="Start gzserver in debug mode using gdb" />

  <!-- startup simulated world -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="worlds/empty.world"/>
    <arg name="gui" value="$(arg gazebo_gui)"/>
    <arg name="paused" value="$(arg paused)"/>
    <arg name="debug" value="$(arg debug)"/>
  </include>

  <!-- Starts EGM group -->
  <group ns="egm">
  <!-- urdf xml robot description loaded on the Parameter Server, converting the xacro into a proper urdf file-->
  <include file="$(find yumi_gazebo)/launch/yumi_load_config.launch" >
    <arg name="gazebo" value="$(arg gazebo)"/>
    <arg name="smart_gripper" value="false"/>
  </include>

  <!-- push robot_description to factory and spawn robot in gazebo -->
  <node name="abb_yumi_spawn" pkg="gazebo_ros" type="spawn_model" output="screen" args="-urdf -param /yumi/robot_description -model yumi" />

    <!-- convert joint states to TF transforms for rviz, etc -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"
	  output="screen" ns="yumi"> 
  </node>

  <!-- init and start Gazebo ros_control interface -->
  <!--<include file="$(find yumi_gazebo)/launch/yumi_control.launch"/>-->

  </group><!-- Ends EGM group -->

</launch>
